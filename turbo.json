{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build",
                "^build-package"
            ],
            "outputs": [
                "build/**"
            ],
            "env": [
                "API_URL"
            ]
        },
        "build-package": {
            "dependsOn": [
                "^build-package"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "dev": {
            "dependsOn": [
                "^build-package"
            ],
            "cache": false,
            "persistent": true,
            "env": [
                "API_URL"
            ]
        },
        "topo": {
            "dependsOn": [
                "^topo"
            ]
        },
        "type-check": {
            "dependsOn": [
                "topo"
            ]
        }
    }
}
