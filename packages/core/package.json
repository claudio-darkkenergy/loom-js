    ],
    "devDependencies": {
        "@esm-bundle/chai": "4.3.4-fix.0",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.6",
        "@testing-library/dom": "^9.3.4",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/chai": "^4.3.11",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.11.8",
        "@types/sinon": "17.0.3",
        "@web/dev-server-esbuild": "^1.0.1",
        "@web/test-runner": "^0.18.0",
        "@web/test-runner-puppeteer": "^0.15.0",
        "pptr-testing-library": "0.7.0",
        "puppeteer": "^21.7.0",
        "rollup": "^4.9.6",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-dts": "^6.1.0",
        "sinon": "17.0.1"
    },
    "files": [
        "dist"
    ],
    "main": "dist/index.js",
    "module": "dist/index.js",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/darkkenergy/loomjs/packages/core"
    },
    "scripts": {
        "build": "rollup -c rollup.config.ts --configPlugin typescript",
        "format": "prettier",
        "start": "rollup -w -c rollup.config.ts --configPlugin typescript",
        "test-ci": "wtr --config \"web-test-runner.config.mjs\"",
        "test-dev": "wtr --config \"web-test-runner.config.mjs\" --watch",
        "test-debug": "wtr --config \"web-test-runner.config.mjs\" --watch --debug",
        "test-pupp": "TS_NODE_PROJECT=\"tsconfig-tests.json\" && ts-node -r tsconfig-paths/register tests/index.ts",
        "tsc": "tsc --noEmit"
    },
    "types": "dist/index.d.ts"
}
