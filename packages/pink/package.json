{
    "name": "@loom-js/pink",
    "version": "0.0.11",
    "author": "Claudio Nunez Jr",
    "license": "ISC",
    "description": "A design system based on Pink Design & made for loomjs.",
    "keywords": [
        "loomjs design system",
        "pink design"
    ],
    "exports": {
        "import": "./src/index.ts",
        "require": "./src/index.js"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/darkkenergy/loomjs/packages/pink"
    },
    "scripts": {
        "build-package": "rollup -c rollup.config.ts --configPlugin typescript",
        "format": "prettier",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@appwrite.io/pink": "^0.3.0",
        "@appwrite.io/pink-icons": "^0.3.0",
        "@loom-js/tags": "workspace:*",
        "@loom-js/core": "workspace:*",
        "classnames": "^2.5.1"
    },
    "devDependencies": {
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/node": "^20.11.8",
        "esbuild": "^0.20.0",
        "esbuild-node-externals": "^1.12.0",
        "rollup": "^4.9.6",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-dts": "^6.1.0",
        "ts-node": "^10.9.1",
        "tslib": "^2.6.2",
        "typescript": "^5.1.6"
    },
    "peerDependencies": {
        "@loom-js/tags": "0.0.11",
        "@loom-js/core": "0.3.26"
