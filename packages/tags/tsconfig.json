{
    "extends": "@loom-js/typescript-config/base.json",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declarationDir": "./dist/typings",
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "removeComments": true,
        "sourceMap": true,
        "types": ["node"]
    },
    "exclude": ["dist", "node_modules"],
    "include": ["src"]
}
