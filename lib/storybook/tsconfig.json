{
    "extends": "@loom-js/typescript-config/base.json",
    "display": "Lib",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "types": ["node"]
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
