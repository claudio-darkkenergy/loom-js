{
  "name": "loom-js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/darkkenergy/loomjs"
  },
  "scripts": {
    "clean": "find ./ -name node_modules -type d -exec rm -rf {} +",
    "build": "turbo build",
    "build-package": "turbo build-package --cache-dir=.turbo",
    "dev": "turbo dev",
    "publish-package": "pnpm build-package && changeset version && changeset publish",
    "update:all": "pnpm -r update -i -L"
  },
  "devDependencies": {
    "@loom-js/typescript-config": "workspace:*",
    "prettier": "^3.2.4",
    "prettier-plugin-sort-imports": "^1.8.3",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.1"
  }
}
